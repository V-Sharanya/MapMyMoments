<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragprofpage"
    android:background="@drawable/bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.sharanya.mmm.utils.AppTextView
            android:id="@+id/pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:gravity="start"
            android:layout_gravity="start"
            android:paddingBottom="10dp"/>

        <!-- Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_card_background"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar_placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="16dp"/>

                <!-- Camera Icon -->
                <ImageView
                    android:id="@+id/cameraIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_camera"
                    android:layout_alignBottom="@id/profileImage"
                    android:layout_alignEnd="@id/profileImage"
                    android:background="@drawable/circle_background"
                    android:padding="4dp"/>

                <!-- Name, Email, Age, Gender -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profileImage"
                    android:orientation="vertical">

                    <com.sharanya.mmm.utils.AppTextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alekhya"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.sharanya.mmm.utils.AppTextView
                        android:id="@+id/usermail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="alekhya33@gmail.com"
                        android:textSize="14sp"
                        android:textColor="@color/gray"/>

                    <!-- Age & Gender in Profile Card -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <com.sharanya.mmm.utils.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age: "
                            android:textColor="@color/teal_700"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <com.sharanya.mmm.utils.AppTextView
                            android:id="@+id/userAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginEnd="15dp"/>

                        <com.sharanya.mmm.utils.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender: "
                            android:textColor="@color/teal_700"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <com.sharanya.mmm.utils.AppTextView
                            android:id="@+id/userGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Set Avatar Text -->
            <com.sharanya.mmm.utils.AppTextView
                android:id="@+id/setAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Avatar"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Activity Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/profile_card_background"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.sharanya.mmm.utils.AppTextView
                    android:id="@+id/activityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Myself"
                    android:textColor="@color/teal_700"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/editActivityIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_edit" />
            </RelativeLayout>

            <com.sharanya.mmm.utils.AppTextView
                android:id="@+id/userBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Traveler | Explorer | Storyteller âœ¨ Capturing moments, mapping memories, and sharing adventures from around the world! ðŸŒðŸ“"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:background="@drawable/button_border"
                android:textColor="@color/orange"
                android:layout_marginEnd="20dp"/>

            <Button
                android:id="@+id/changePasswordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:background="@drawable/button_border"
                android:textColor="@color/orange"/>
        </LinearLayout>

        <Button
            android:id="@+id/deleteAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_border"
            android:text="Delete Account"
            android:textColor="@color/app_bar"/>
    </LinearLayout>
</ScrollView>
