<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateFragment"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:elevation="5dp"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="10dp">

            <!-- Title -->
            <TextView
                android:id="@+id/createPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE POST"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!-- Start Destination Input -->
                <EditText
                    android:id="@+id/startDestination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Start Destination"
                    android:textColorHint="@color/black"
                    android:background="@drawable/input_background"
                    android:textColor="@color/black"
                    android:padding="14dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addDestinationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_input_add"
                    app:backgroundTint="@color/orange"
                    app:maxImageSize="24dp"
                    android:textColorHint="@color/black"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <!-- Date Input -->
            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@drawable/input_background"
                android:padding="14dp"
                android:layout_marginTop="10dp" />

            <!-- Description Input -->
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:background="@drawable/input_background"
                android:padding="14dp"
                android:minHeight="120dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginTop="10dp" />

            <!-- Add Images Section -->
            <TextView
                android:id="@+id/addImagesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Images"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/upload"
                    android:layout_marginEnd="10dp"
                    android:layout_marginVertical="4dp" />

                <Button
                    android:id="@+id/selectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Image"
                    app:backgroundTint="@color/teal_700"
                    android:textColor="@android:color/white"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- End Destination Input -->
            <EditText
                android:id="@+id/endDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="End Destination"
                android:textColor="@color/black"
                android:background="@drawable/input_background"
                android:padding="14dp"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <!-- Create Post Button -->
            <Button
                android:id="@+id/create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Post"
                app:backgroundTint="@color/active"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
