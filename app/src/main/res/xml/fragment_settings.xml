<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <PreferenceCategory android:title="Enable the Night mode">

        <CheckBoxPreference
            android:title="Night Mode"
            android:key="NIGHT"
            android:defaultValue="false"
            android:summaryOff="Night mode is deactivated"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Screen Orientation">
        <ListPreference
            android:key="ORIENTATION"
            android:entries="@array/items_name"
            android:entryValues="@array/items_value"
            
            android:title="Orientation"
            android:defaultValue="1"/> <!-- Ensure this value matches entryValues -->
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
